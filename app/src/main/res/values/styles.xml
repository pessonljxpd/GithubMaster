<resources>
    <!--Toolbar OverflowMen-->
    <style name="AppTheme.ToolBar.Menu" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- 设置-弹窗的背景-颜色-->
        <item name="android:colorBackground">@color/colorPrimary</item>
        <!-- 字体的颜色-->
        <item name="android:textColor">@color/color_white</item>
        <!-- 字体大小-->
        <item name="android:textSize">16sp</item>
        <!-- 用于替换菜单的三个小白点，换成自已的图片-->
        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow.Menu</item>
        <!--用于控制menu弹出的位置，位于toolbar的下面，而不是上面-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <!-- 用于修改item默认的分割线-->
        <item name="android:dropDownListViewStyle">@style/DropDownStyle</item>
        <item name="dropDownListViewStyle">@style/DropDownStyle</item>
    </style>

    <style name="ActionButton.Overflow.Menu" parent="@style/Widget.AppCompat.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow_light</item>
    </style>

    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4dip</item>
        <item name="android:dropDownHorizontalOffset">2dip</item>
    </style>

    <style name="DropDownStyle" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:divider">@color/grey_hex_e0</item>
        <item name="android:dividerHeight">0.5dp</item>
        <item name="android:listSelector">@drawable/overflow_menu_list</item>
    </style>

    <!--Trending TextStyle-->
    <style name="TrendingItemTextViewTitleStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.TrendingItem.TextView.Title</item>
    </style>

    <style name="TrendingItemTextViewDescriptionStyle">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">2</item>
        <item name="android:textAppearance">@style/TextAppearance.TrendingItem.TextView.Description</item>
    </style>

    <style name="TrendingItemTextViewDetailStyle">
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.TrendingItem.TextView.Detail</item>
    </style>

    <!--Trending TextAppearance-->
    <style name="TextAppearance.TrendingItem.TextView.Title" parent="@style/TextAppearance.AppCompat.Large">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="TextAppearance.TrendingItem.TextView.Description" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/grey_hex_30</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="TextAppearance.TrendingItem.TextView.Detail" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/grey_hex_45</item>
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--Trending Stars-->
    <style name="TrendingStar" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@drawable/stars_num_peroid</item>
        <item name="android:button">@drawable/stars</item>
        <item name="android:drawablePadding">@dimen/dimen_small</item>
        <item name="android:textAppearance">@style/TextAppearance.TrendingItem.TextView.Detail</item>
    </style>
    
</resources>
